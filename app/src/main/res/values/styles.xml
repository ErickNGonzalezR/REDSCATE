<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="AppTheme.boton_nav_bar" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppTheme.titulo_home" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.boton_perfil" parent="AppTheme">
        <item name="android:layout_width">157dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">12dp</item>
        <item name="android:paddingHorizontal">25dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="AppTheme.boton_cards" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">12dp</item>
        <item name="android:paddingHorizontal">25dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.constraintlayout_cards" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/rounded_button_cards</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AppTheme.image_cards" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="AppTheme.title_cards" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:layout_marginStart">120dp</item>
    </style>

    <style name="AppTheme.text_cards" parent="AppTheme">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">120dp</item>
        <item name="android:layout_marginBottom">23dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="AppTheme.image2_cards" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_button_cards</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>
